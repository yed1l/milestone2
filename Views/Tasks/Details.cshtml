@model ToDoTaskApp.Models.Task

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-primary">Details</h1>

<div class="container" style="margin-left:25%">
    <h4>Task</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Task Title
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TaskTitle)
        </dd>
        <dt>
           Task Comment
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TaskComment)
        </dd>
        <dt>
           Task Date
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TaskDate)
        </dd>
        <dt>
            Task Status
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TaskStatus)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.TaskId">Edit</a> |
    <a asp-action="Index">Back to Task List</a>
</div>
